=stylesheet_link_tag 'planilha'

= @disciplina.apelido + (" - fixa" if @disciplina.fixa?).to_s


#planilha
  %table
    %thead
      %tr
        %td
        -@horas.each do |hora|
          %th= "%02d:00" % hora
        %td

    %tfoot
      %tr
        %td
        -@horas.each do |hora|
          %th= "%02d:00" % hora
        %td

    %tbody
      -@dias.each do |dia|
        %tr
          %th= dia.strftime "%a/%d/%b"
          -@horas.each do |hora|
            %td= celula dia, hora
          %th= dia.strftime "%a/%d/%m"
